	</animation>

	<animation>
		<name>Speed knob pick</name>
		<type>pick</type>
		<object-name>SPDknb</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>nasal</command>
				<script><![CDATA[
				 var setting = getprop("autopilot/settings/speed-mode");
				 if (setting == "knots")
				  {
				  var newSpeed = getprop("autopilot/settings/target-speed-kt") + 1;
				  if (newSpeed <= 999)
				   {
				   setprop("autopilot/settings/target-speed-kt", newSpeed);
				   }
				  }
				 elsif (setting == "mach")
				  {
				  var newSpeed = getprop("autopilot/settings/target-speed-mach") + 0.01;
				  if (newSpeed <= 9.99)
				   {
				   setprop("autopilot/settings/target-speed-mach", newSpeed);
				   }
				  }
				]]></script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>nasal</command>
				<script><![CDATA[
				 var setting = getprop("autopilot/settings/speed-mode");
				 if (setting == "knots")
				  {
				  var newSpeed = getprop("autopilot/settings/target-speed-kt") - 1;
				  if (newSpeed >= 0)
				   {
				   setprop("autopilot/settings/target-speed-kt", newSpeed);
				   }
				  }
				 elsif (setting == "mach")
				  {
				  var newSpeed = getprop("autopilot/settings/target-speed-mach") - 0.01;
				  if (newSpeed >= 0)
				   {
				   setprop("autopilot/settings/target-speed-mach", newSpeed);
				   }
				  }
				]]></script>
			</binding>
		</action>
	</animation>
	<animation>
		<name>Speed knob kt rotate</name>
		<type>rotate</type>
		<object-name>SPDknb</object-name>
		<property>autopilot/settings/target-speed-kt</property>
		<factor>2</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.124</y-m>
			<z-m>-0.0055</z-m>
		</center>
	</animation>
	<animation>
		<name>Speed knob Mach rotate</name>
		<type>rotate</type>
		<object-name>SPDknb</object-name>
		<property>autopilot/settings/target-speed-mach</property>
		<factor>2000</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.124</y-m>
			<z-m>-0.0055</z-m>
		</center>
	</animation>

	<animation>
