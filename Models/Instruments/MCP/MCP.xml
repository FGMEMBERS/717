	<!-- Speed hold -->
	<animation>
		<name>IAS/Mach toggle</name>
		<type>pick</type>
		<object-name>IAS-Mach</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>autopilot/settings/speed-mode</property>
				<value>knots</value>
				<value>mach</value>
			</binding>
		</action>
	</animation>

	<animation>
		<name>IAS setting select</name>
		<type>select</type>
		<object-name>APias100</object-name>
		<object-name>APias10</object-name>
		<object-name>APias1</object-name>
		<object-name>APias</object-name>
		<condition>
			<equals>
				<property>autopilot/settings/speed-mode</property>
				<value>knots</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<name>IAS setting 100's</name>
		<type>textranslate</type>
		<object-name>APias100</object-name>
		<property>autopilot/settings/target-speed-kt</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>IAS setting 10's</name>
		<type>textranslate</type>
		<object-name>APias10</object-name>
		<property>autopilot/settings/target-speed-kt</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>IAS setting 1's</name>
		<type>textranslate</type>
		<object-name>APias1</object-name>
		<property>autopilot/settings/target-speed-kt</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

	<animation>
		<name>Mach setting select</name>
		<type>select</type>
		<object-name>APmach1</object-name>
		<object-name>APmach.1</object-name>
		<object-name>APmach.01</object-name>
		<object-name>APmach</object-name>
		<condition>
			<equals>
				<property>autopilot/settings/speed-mode</property>
				<value>mach</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<name>Mach setting 1's</name>
		<type>textranslate</type>
		<object-name>APmach1</object-name>
		<property>autopilot/settings/target-speed-mach</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>Mach setting .1's</name>
		<type>textranslate</type>
		<object-name>APmach.1</object-name>
		<property>autopilot/settings/target-speed-mach</property>
		<step>0.1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>Mach setting .01's</name>
		<type>textranslate</type>
		<object-name>APmach.01</object-name>
		<property>autopilot/settings/target-speed-mach</property>
